{
    "push": {
      "name": "",
      "vcs": true
    },
    "variables": {
        "atlas_username": "{{env `ATLAS_USERNAME`}}",
        "atlas_name": "{{env `ATLAS_NAME`}}",
        "build_timestamp": "{{isotime \"20060102150405\"}}",
        "iso_checksum": "a3b345908a826e262f4ea1afeb357fd09ec0558cf34e6c9112cead4bb55ccdfb",
        "iso_checksum_type": "sha256",
        "iso_name": "ubuntu-14.04.3-server-amd64.iso",
        "mirror": "http://releases.ubuntu.com/trusty",
        "template": "rackhd-ubuntu-14.04-amd64",
        "apt_mirror": "",
        "headless": "true"
    },
    "provisioners": [
        {
            "type": "shell",
            "script": "scripts/base.sh",
            "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
        },
        {
            "type": "shell",
            "script": "scripts/virtualbox.sh",
            "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'",
            "only": ["virtualbox-iso"]
        },
        {
            "type": "shell",
            "script": "scripts/vmware.sh",
            "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'",
            "only": ["vmware-iso"]
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/vagrant.sh",
                "scripts/dep.sh"
            ],
            "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
        },
        {
            "type": "ansible-local",
            "inventory_groups": "local",
            "playbook_file": "rackhd_local.yml",
            "playbook_dir": "."
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/cleanup.sh",
                "scripts/zerodisk.sh"
            ],
            "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
        }
    ],
    "builders": [
   {
     "type": "vmware-iso",
     "vm_name": "{{user `template`}}",
     "guest_os_type": "ubuntu-64",
     "headless": "{{user `headless`}}",
     "boot_wait": "20s",
     "disk_size": 40960,
     "iso_checksum": "{{user `iso_checksum`}}",
     "iso_checksum_type": "{{user `iso_checksum_type`}}",
     "iso_url": "{{user `mirror`}}/{{user `iso_name`}}",
     "output_directory": "vmware-{{user `template`}}-iso",
     "boot_command": [
       "<esc><wait>",
       "<esc><wait>",
       "<enter><wait>",
       "/install/vmlinuz<wait>",
       " auto<wait>",
       " console-setup/ask_detect=false<wait>",
       " console-setup/layoutcode=us<wait>",
       " console-setup/modelcode=pc105<wait>",
       " debconf/frontend=noninteractive<wait>",
       " debian-installer=en_US<wait>",
       " fb=false<wait>",
       " initrd=/install/initrd.gz<wait>",
       " kbd-chooser/method=us<wait>",
       " keyboard-configuration/layout=USA<wait>",
       " keyboard-configuration/variant=USA<wait>",
       " locale=en_US<wait>",
       " netcfg/get_hostname=rackhd<wait>",
       " netcfg/get_domain=vagrantup.com<wait>",
       " noapic<wait>",
       " interface=eth0<wait>",
       " netcfg/choose_interface=eth0<wait>",
       " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
       " -- <wait>",
       "<enter><wait>"
     ],
     "http_directory": "http",
     "ssh_username": "vagrant",
     "ssh_password": "vagrant",
     "ssh_port": 22,
     "ssh_wait_timeout": "10000s",
     "shutdown_command": "echo 'shutdown -P now' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
     "vmx_data": {
       "memsize": "4096",
       "numvcpus": "4",
       "cpuid.coresPerSocket": "1"
     },
     "vmx_data_post": {
       "ethernet0.networkName": "ADMIN",
       "ethernet0.virtualDev": "e1000",
       "ethernet0.present": "TRUE",
       "ethernet0.pcislotnumber": "51",
       "ethernet1.networkName": "CONTROL",
       "ethernet1.virtualDev": "e1000",
       "ethernet1.present": "TRUE",
       "ethernet1.pcislotnumber": "52",
       "ethernet2.networkName": "PDU",
       "ethernet2.virtualDev": "e1000",
       "ethernet2.pcislotnumber": "53",
       "ethernet2.present": "TRUE",
       "ide1:0.startConnected": "FALSE",
       "ide1:0.deviceType": "cdrom-raw",
       "ide1:0.clientDevice": "TRUE",
       "ide1:0.fileName": "emptyBackingString",
       "ide1:0.present": "TRUE"
     }
   },
   {
     "type": "virtualbox-iso",
     "vm_name": "{{user `template`}}",
     "headless": "{{user `headless`}}",
     "hard_drive_interface": "scsi",
     "boot_command": [
       "<esc><wait>",
       "<esc><wait>",
       "<enter><wait>",
       "/install/vmlinuz<wait>",
       " auto<wait>",
       " console-setup/ask_detect=false<wait>",
       " console-setup/layoutcode=us<wait>",
       " console-setup/modelcode=pc105<wait>",
       " debconf/frontend=noninteractive<wait>",
       " debian-installer=en_US<wait>",
       " fb=false<wait>",
       " initrd=/install/initrd.gz<wait>",
       " kbd-chooser/method=us<wait>",
       " keyboard-configuration/layout=USA<wait>",
       " keyboard-configuration/variant=USA<wait>",
       " locale=en_US<wait>",
       " netcfg/get_hostname=rackhd<wait>",
       " netcfg/get_domain=vagrantup.com<wait>",
       " noapic<wait>",
       " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
       " -- <wait>",
       "<enter><wait>"
     ],
     "boot_wait": "30s",
     "disk_size": 40960,
     "guest_os_type": "Ubuntu_64",
     "http_directory": "http",
     "iso_checksum": "{{user `iso_checksum`}}",
     "iso_checksum_type": "{{user `iso_checksum_type`}}",
     "iso_url": "{{user `mirror`}}/{{user `iso_name`}}",
     "output_directory": "virtualbox-{{user `template`}}-iso",
     "ssh_username": "vagrant",
     "ssh_password": "vagrant",
     "ssh_port": 22,
     "ssh_wait_timeout": "10000s",
     "shutdown_command": "echo 'shutdown -P now' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
     "vboxmanage": [
       [ "modifyvm", "{{.Name}}", "--memory", "4096" ],
       [ "modifyvm", "{{.Name}}", "--cpus", "4" ]
     ]
   }
 ],
    "post-processors": [
        [{
            "type": "vagrant",
            "keep_input_artifact": false
        },
        {
            "type": "atlas",
            "only": ["vmware-iso"],
            "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
            "artifact_type": "vagrant.box",
            "metadata": {
                "provider": "vmware_desktop",
                "version": "1.1.3"
            }
        },
        {
            "type": "atlas",
            "only": ["virtualbox-iso"],
            "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
            "artifact_type": "vagrant.box",
            "metadata": {
                "provider": "virtualbox",
                "version": "1.1.3"
            }
        }]
    ]
}
